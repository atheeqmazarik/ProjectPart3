<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div id="edit-column">
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Edit name of course"
                    name="name" 
                    value="<%= Show.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="creatorTextField">Teacher</label>
                    <input type="text" class="form-control"
                    id="creatorTextField"
                    placeholder="Edit teacher's name"
                    name="creator"
                    value="<%= Show.creator %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="genresTextField">Schedule</label>
                    <input type="text" class="form-control"
                    id="genresTextField"
                    placeholder="Edit schedule"
                    name="genres" 
                    value="<%= Show.genres %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="episodesTextField">Classroom</label>
                    <input type="text" class="form-control"
                    id="episodesTextField"
                    placeholder="Edit classroom"
                    name="episodes" 
                    value="<%= Show.episodes %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="certificationTextField">Grade</label>
                    <input type="text" class="form-control"
                    id="certificationTextField"
                    placeholder="Edit Grade"
                    name="certification" 
                    value="<%= Show.certification %>"
                    required>
                </div>


                </div>
                <br>
                <button class="btn btn-success" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/tvlist" class="btn btn-danger">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>
</div>


<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>